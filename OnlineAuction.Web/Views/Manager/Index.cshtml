@model IEnumerable<LotSummaryViewModel>
@{
    ViewData["Title"] = "Manage";
}

<h2>Manage All Lots</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>End Time</th>
            <th>Current Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LotID</td>
                <td>@item.Name</td>
                <td>@item.EndTime</td>
                <td>@item.CurrentPrice</td>
                <td>
                    <a asp-action="Update" asp-controller="Lot" asp-route-id="@item.LotID">Edit</a> |
                    <a asp-action="Details" asp-controller="Lot" asp-route-id="@item.LotID">Details</a>
                    <form asp-action="Delete" asp-controller="Lot" asp-route-id="@item.LotID">
                        <input class="btn btn-outline-danger btn-sm" type="submit" value="Delete" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>